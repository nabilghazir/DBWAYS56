<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Project</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./assets/css/navbar.css" />
    <link rel="stylesheet" href="./assets/css/myproject.css" />
  </head>
  <body class="bgc">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary nav-bgc">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"
          ><img class="img" src="./assets/img/brandred.png"
        /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/add-project"
                >Add Project</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/testimonial"
                >Testimonial</a
              >
            </li>
          </ul>
          <a href="/contact-me">
            <button class="btn btn-outline-dark" type="submit">
              Contact Me
            </button>
          </a>
        </div>
      </div>
    </nav>
    <!-- Body -->
     <div class="container-fluid">

    <div class="body">
      <div class="borderbody">
        <h1 class="h1">Add Project</h1>
        <form method="post" action="/add-project" class="d-flex justify-content-center">
          <div class="col-md-8">
            <div class="form-floating mb-3">
              <input
              type="text"
              class="form-control"
              id="name"
              name="projectname"
              placeholder="Name"
              />
              <label for="name" class="font">Project Name</label>
            </div>
            <div class="row g-2">
              <div class="col-md">
                <div class="form-floating">
                  <input
                    type="date"
                    class="form-control font"
                    id="startdate"
                    name="startdate"
                  />
                  <label for="start-date">Start Date</label>
                </div>
              </div>
              <div class="col-md">
                <div class="form-floating">
                  <input type="date" class="form-control font" id="end-date" name="enddate" />
                  <label for="enddate">End Date</label>
                </div>
              </div>
            </div>
            <div class="form-floating">
              <textarea
                class="form-control mt-3"
                id="description"
                style="height: 100px; resize: none"
                name="desc"
              ></textarea>
              <label for="description">Description</label>
            </div>
            
            <div class="tech d-flex justify-content-center">
              <label>Technologies</label>
              <div class="d-flex flex-column">

                <!-- flex 1 -->
                <div class="mb-3">
                  <input
                  class="form-check-input m"
                  type="checkbox"
                  value="nodejs"
                  id="nodejs"
                  style="background-color: grey"
                  name="nodejs"
                  />
                  <label class="form-check-label" for="nodejs">Node JS</label>
                  <input
                  class="form-check-input"
                  type="checkbox"
                  value="javascript"
                  id="js"
                  style="background-color: grey; margin-left: 50px"
                  name="javascript"
                  />
                  <label class="form-check-label" for="js">JavaScript</label>
                </div>
               <!-- flex 2 -->
                <div class="mb-3">
                  <input
                  class="form-check-input m"
                  type="checkbox"
                  value="reactjs"
                  id="reactjs"
                  style="background-color: grey"
                  name="reactjs"
                  />
                 <label class="form-check-label" for="react-js">React JS</label>
                  <input
                  class="form-check-input"
                  type="checkbox"
                  value="android"
                  id="android"
                  style="background-color: grey; margin-left: 50px"
                  name="android"
                  />
                  <label class="form-check-label" for="android">Android</label>
                </div>
               </div>
                <div class="input-group mb-5">
                  <label class="input-group-text" for="upload-image" hidden>Upload Image</label>
                  <input type="file" class="form-control" id="upload-image" />
                </div>
          </div>
          <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn btn-secondary btn-block ">Post Project</button>
          </div>
        </form>
      </div>
    </div>
          
  </div>
    <!-- Project List -->
  </body>
  <script src="./assets/js/myproject.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
  <script src="./assets/js/hamburger.js"></script>
</html>
