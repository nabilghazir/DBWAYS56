<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Testimonial</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./assets/css/navbar.css" />
    <link rel="stylesheet" href="./assets/css/testimonial.css" />
  </head>
  <body class="bgc">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary nav-bgc">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img
            class="img"
            src="/assets/img/brandred.png"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/add-project">Add
                  Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/testimonial"
              >Testimonial</a>
            </li>

          </ul>
          <div class="dropdown ms-auto">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="fa-regular fa-user"></i>
              {{user.username}}
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              {{#if isLogin}}
                <li><a
                    class="dropdown-item disabled"
                  >Hi,{{user.username}}</a></li>
                <li><a class="dropdown-item" href="/edit-profile">Edit Profile</a></li>
                <li><a href="" class="dropdown-item" href="/logout">Log Out</a></li>
              {{else}}
                <li><a class="dropdown-item" href="/login">Login</a></li>
                <li><a class="dropdown-item" href="/register">Register</a></li>
              {{/if}}
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="/contact-me">Contact Me</a></li>
            </ul>
          </div>

        </div>
      </div>
    </nav>
    <!-- Body -->
    <div class="container-fluid body">
      <h1 class="h1">Testimonial</h1>
      <div class="buttongroup">
        <button
          type="button"
          class="btn btn-warning d-flex flex-row justify-content-center align-items-center"
          onclick="allTestimonial()"
        >
          All
        </button>
        <button
          type="button"
          class="btn btn-warning d-flex flex-row justify-content-center align-items-center"
          onclick="testimonialFilter(1)"
        >
          1
          <i class="fa-sharp fa-regular fa-star"></i>
        </button>
        <button
          type="button"
          class="btn btn-warning d-flex flex-row justify-content-center align-items-center"
          onclick="testimonialFilter(2)"
        >
          2
          <i class="fa-sharp fa-regular fa-star"></i>
        </button>
        <button
          type="button"
          class="btn btn-warning d-flex flex-row justify-content-center align-items-center"
          onclick="testimonialFilter(3)"
        >
          3
          <i class="fa-sharp fa-regular fa-star"></i>
        </button>
        <button
          type="button"
          class="btn btn-warning d-flex flex-row justify-content-center align-items-center"
          onclick="testimonialFilter(4)"
        >
          4
          <i class="fa-sharp fa-regular fa-star"></i>
        </button>

        <button
          type="button"
          class="btn btn-warning d-flex flex-row justify-content-center align-items-center"
          onclick="testimonialFilter(5)"
        >
          5
          <i class="fa-sharp fa-regular fa-star"></i>
        </button>
      </div>
      <div class="container-grid" id="container-grid"></div>
    </div>
  </body>
  <script src="./assets/js/hamburger.js"></script>
  <script src="./assets/js/testimonial.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>