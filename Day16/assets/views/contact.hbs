<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Me</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/assets/css/navbar.css" />
    <link rel="stylesheet" href="/assets/css/contact.css" />
  </head>
  <body class="bgc">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary nav-bgc">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img
            class="img"
            src="/assets/img/brandred.png"
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/add-project">Add
                  Project</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a
                class="nav-link"
                aria-current="page"
                href="/testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="dropdown ms-auto">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="fa-regular fa-user"></i>
              {{user.username}}
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              {{#if isLogin}}
                <li><a
                    class="dropdown-item disabled"
                  >Hi,{{user.username}}</a></li>
                <li><a class="dropdown-item" href="/edit-profile">Edit Profile</a></li>
                <li><a href="" class="dropdown-item" href="/logout">Log Out</a></li>
              {{else}}
                <li><a class="dropdown-item" href="/login">Login</a></li>
                <li><a class="dropdown-item" href="/register">Register</a></li>
              {{/if}}
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="/contact-me">Contact Me</a></li>
            </ul>
          </div>

        </div>
      </div>
    </nav>
    <!-- Body -->

    <div class="container-fluid">
      <div class="contactbody">
        <h1>Get to know</h1>
        <div>
          <form class="d-flex p-5 row justify-content-center">
            <div class="col-md-8">
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  placeholder="Name"
                />
                <label for="name" style="margin-left: 10px">Name</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="Email"
                />
                <label for="email" style="margin-left: 10px">Email address</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="tel"
                  class="form-control"
                  id="phone"
                  placeholder="Telephone"
                />
                <label for="phone" style="margin-left: 10px">Telephone</label>
              </div>

              <div class="form-floating mb-3">
                <select
                  class="form-select"
                  id="subject"
                  aria-label="Floating label select example"
                >
                  <option value="1" style="display: none"></option>
                  <option value="2">Frontend Developer</option>
                  <option value="3">Backend Developer</option>
                  <option value="4">Fullstack Developer</option>
                </select>
                <label
                  for="subject"
                  class="font"
                  style="margin-left: 10px"
                >Subject</label>
              </div>
              <div class="form-floating mb-4">
                <textarea
                  class="form-control txtarea"
                  placeholder="Your Message"
                  id="desc"
                ></textarea>
                <label
                  for="inputText"
                  class="font"
                  style="margin-left: 10px"
                >Your Message</label>
              </div>
            </div>

            <button
              type="submit"
              class="btn btn-outline-dark col-md-2 offset-md-6"
              onclick="submitform(event)"
            >
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
  <script src="./assets/js/contact.js"></script>
  <script src="./assets/js/hamburger.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>